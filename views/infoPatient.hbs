<body>
<section>
    <h1 class="text-center text-capitalize">Cập nhật thông tin bệnh nhân</h1>
    <div class="container">
        <form id="application-form" method="post" action="/update-patient">
            <div class="form-group mb-3">
                <div class="row">
                    <div class="col">

                        <p><strong>ID</strong>&nbsp;<span class="text-danger">*</span></p>
                        <input class="form-control" type="text" required="" readonly  name="key" value="{{patient._id}}">
                    </div>
                    <div class="col">
                        <p><strong>Name</strong>&nbsp;<span class="text-danger">*</span></p>
                        <input class="form-control" type="text" required="" readonly name="name" value="{{patient.name}}">
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="row">
                    <div class="col">
                        <p><strong>Birthday</strong>&nbsp;<span class="text-danger">*</span></p>
                        <input class="form-control" type="date" required="" name="birth_day" value="{{patient.birth_day}}">
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <p><strong>Age&nbsp;</strong><span class="text-danger">*</span></p>
                <input class="form-control" type="text" name="age" value="{{patient.age}}">
            </div>
            <div class="form-group mb-3">
                <p><strong>Phone&nbsp;Number&nbsp;</strong><span class="text-danger">*</span></p>
                <input class="form-control" type="number" name="phone" placeholder="7777777777" value="{{patient.phone}}">
            </div>
            <div class="form-group mb-3">
                <p><strong>Number Room&nbsp;</strong><span class="text-danger">*</span></p>
                <input class="form-control" type="text" required="" name="number_room" value="{{patient.number_room}}" placeholder="Ex. Room No-361, 33/1, 3rd Floor">
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Block level button</button>
        </form>
    </div>

</section>
<script src="assets/bootstrap/js/bootstrap.min.js"></script>
<script src="assets/js/Application-Form-1.js"></script>
<script src="assets/js/Application-Form.js"></script>
</body>

</html>
