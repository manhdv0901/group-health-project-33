<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh sách bệnh nhân</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Bệnh nhân</li>
                <li class="breadcrumb-item active">Danh sách bệnh nhân</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div id="content" class="p-4 p-md-5 pt-5">
            <div class="container-fluid"  >
                <div class="card" id="TableSorterCard">
                    <div class="card-header py-2">
                        <div class="row table-topper align-items-center">
                            <div class="col-12 col-sm-5 col-md-6 text-start" style="margin: 0px;padding: 5px 15px;">
                                <p class="text-primary m-0 fw-bold">Danh sách bệnh nhân</p>
                            </div>
                            <div class="col-12 col-sm-7 col-md-6 text-end" style="margin: 0px;padding: 5px 15px;">
                                <button class="btn btn-primary btn-sm reset" type="button" style="margin: 2px;">Borrar Filtros
                                </button>
                                <button class="btn btn-warning btn-sm" id="zoom_in" type="button" zoomclick="ChangeZoomLevel(-10);"
                                        style="margin: 2px;"><i class="fa fa-search-plus"></i></button>
                                <button class="btn btn-warning btn-sm" id="zoom_out" type="button" zoomclick="ChangeZoomLevel(-10);"
                                        style="margin: 2px;"><i class="fa fa-search-minus"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-striped table tablesorter" id="ipi-table">
                                    <thead class="thead-dark">
                                    <tr>
                                        <th class="column1">Ảnh</th>
                                        <th class="column2">ID</th>
                                        <th class="column3">Họ Và Tên</th>
                                        <th class="column4">Tên đăng nhập</th>
                                        <th class="column5">Mật khẩu</th>
                                        <th class="column4">Số điện thoại</th>
                                        <th class="column6">Số phòng</th>
                                        <th class="column6">Sự kiện</th>
                                    </tr>
                                    </thead>
                                    {{#each docs}}
                                        <tbody>
                                        <tr>
                                            <td class="column1"><img class="rounded-circle me-2" width="30" height="30"
                                                                     src="img/avatars/avatar{{this.id}}.jpeg"/></td>
                                            <td class="column2">{{this.id}}</td>
                                            <td class="column3">{{this.name}}</td>
                                            <td class="column4">{{this.username}}</td>
                                            <td class="column5">{{this.password}}</td>
                                            <td class="column4">{{this.phone}}</td>
                                            <td class="column6">{{this.number_room}}</td>
                                            <td class="text-center align-middle" style="max-height: 60px;height: 60px;">
                                                <a class="btn btnMaterial btn-flat primary semicircle bi bi-eye" role="button"
                                                   href="/list-patients/{{this._id}}"></a>
                                                <a class="btn btnMaterial btn-flat success semicircle bi bi-pen" role="button"
                                                   href="/list-patients/update/{{this._id}}"></a>
                                                <a class="btn btnMaterial btn-flat accent btnNoBorders checkboxHover bi bi-trash-fill" role="button"
                                                   href="/delete/{{this._id}}">

                                                </a>
                                            </td>
                                        </tr>
                                        </tbody>
                                    {{/each}}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->

