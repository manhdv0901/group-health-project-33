            </a>
        </li><!-- End Contact Page Nav -->






    </ul>

</aside>

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh sách bệnh nhân</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active">Danh sách bệnh nhân</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách bệnh nhân</h5>
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">ID</th>
                                <th scope="col">Họ Và Tên</th>
                                <th scope="col">Số điện thoại</th>
                                <th scope="col">Số Phòng</th>
                                <th scope="col">Sự kiện</th>
                            </tr>
                            </thead>
                        <tbody>
{{#each docs}}

                            {{#compare this.state "==" 2}}
                            <tr class="table-warning">
                                <th scope="row"><a href="#">#</a></th>
                                <td>{{this.id}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.phone}}</td>
                                <td>{{this.number_room}}</td>
                                <td>
                                        <div class="card-body">

                                            <a type="button" href="/{{this._id}}" class="btn btn-secondary">Chi Tiết <i class="bi bi-collection"></i></a>

                                            <a type="button" href="/delete/{{this._id}}" class="btn btn-danger">Xóa <i class="bi bi-exclamation-octagon"></i></a>

<!--                                            <a type="button" href="/list-patients/update/{{this._id}}" class="btn btn-info"><i class="bi bi-info-circle"></i></a>-->

                                        </div>

                                </td>
<!--                              -->
<!--                                    <td><a href="#" class="btn btn-success">{{this.state}}</a></td>-->
<!--                               -->
                            </tr>
                            {{/compare}}
                            {{#compare this.state "==" 1}}
                                <tr class="table-info">
                                    <th scope="row"><a href="#">#</a></th>
                                    <td>{{this.id}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.phone}}</td>
                                    <td>{{this.number_room}}</td>
                                    <td>
                                        <div class="card-body">

                                            <a type="button" href="/{{this._id}}" class="btn btn-secondary">Chi Tiết <i class="bi bi-collection"></i></a>

                                            <a type="button" href="/delete/{{this._id}}" class="btn btn-danger">Xóa <i class="bi bi-exclamation-octagon"></i></a>

                                            <!--                                            <a type="button" href="/list-patients/update/{{this._id}}" class="btn btn-info"><i class="bi bi-info-circle"></i></a>-->

                                        </div>

                                    </td>
                                    <!--                              -->
                                    <!--                                    <td><a href="#" class="btn btn-success">{{this.state}}</a></td>-->
                                    <!--                               -->
                                </tr>
                            {{/compare}}
                            {{#compare this.state "==" 0}}
                                <tr  class="table-success">
                                    <th scope="row"><a href="#">#</a></th>
                                    <td>{{this.id}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.phone}}</td>
                                    <td>{{this.number_room}}</td>
                                    <td>
                                        <div class="card-body">

                                            <a type="button" href="/{{this._id}}" class="btn btn-secondary">Chi Tiết <i class="bi bi-collection"></i></a>

                                            <a type="button" href="/delete/{{this._id}}" class="btn btn-danger">Xóa <i class="bi bi-exclamation-octagon"></i></a>

                                            <!--                                            <a type="button" href="/list-patients/update/{{this._id}}" class="btn btn-info"><i class="bi bi-info-circle"></i></a>-->

                                        </div>

                                    </td>
                                    <!--                              -->
                                    <!--                                    <td><a href="#" class="btn btn-success">{{this.state}}</a></td>-->
                                    <!--                               -->
                                </tr>
                            {{/compare}}
                            {{#compare this.state "==" 3}}
                                <tr  class="table-danger">
                                    <th scope="row"><a href="#">#</a></th>
                                    <td>{{this.id}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.phone}}</td>
                                    <td>{{this.number_room}}</td>
                                    <td>
                                        <div class="card-body">

                                            <a type="button" href="/{{this._id}}" class="btn btn-secondary">Chi Tiết <i class="bi bi-collection"></i></a>

                                            <a type="button" href="/delete/{{this._id}}" class="btn btn-danger">Xóa <i class="bi bi-exclamation-octagon"></i></a>

                                            <!--                                            <a type="button" href="/list-patients/update/{{this._id}}" class="btn btn-info"><i class="bi bi-info-circle"></i></a>-->

                                        </div>

                                    </td>
                                    <!--                              -->
                                    <!--                                    <td><a href="#" class="btn btn-success">{{this.state}}</a></td>-->
                                    <!--                               -->
                                </tr>
                            {{/compare}}


{{/each}}
                        </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

