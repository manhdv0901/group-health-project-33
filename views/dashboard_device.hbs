            <!-- Pie Chart -->
            <div id="pieChart"></div>

            <script>
                document.addEventListener("DOMContentLoaded", () => {
                    new ApexCharts(document.querySelector("#pieChart"), {
                        series: [44, 55],
                        chart: {
                            height: 400,
                            type: 'pie',
                            toolbar: {
                                show: true
                            }
                        },
                        labels: ['Thiết bị đã sử dụng', 'Thiết bị chưa sử dụng']
                    }).render();
                });
            </script>
            <!-- End Pie Chart -->

        </div>
    </div>
</div>

<div class="col-lg-12">
