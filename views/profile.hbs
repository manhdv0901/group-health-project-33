                                <div class="modal fade" id="basicModal" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <table class="table table-borderless">
                                                <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Name</th>
                                                    <th>State</th>
                                                    <th>Selection</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {{#each doctors}}
                                                    <tr>
                                                        <th scope="row">{{id}}</th>
                                                        <td id="name">{{name}}</td>
                                                        <td>{{state}}</td>
