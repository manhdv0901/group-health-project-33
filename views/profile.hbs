                                        <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Key Device</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input name="key_device" value="{{patient.key_device}}" type="text" class="form-control" id="Phone">
                                        </div>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">Thay đổi</button>
                                    </div>
                                </form><!-- End Profile Edit Form -->

