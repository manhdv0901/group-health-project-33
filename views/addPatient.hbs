    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Thêm bệnh nhân</h5>

                        <!-- General Form Elements -->
                        <form>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">ID</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="id" placeholder="Ex. 01,02,03">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputEmail" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" required="" placeholder="Nguyễn Văn A" name="name">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputUsername" class="col-sm-2 col-form-label">Username</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="username" placeholder="user@domain.com">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" name="password" placeholder="">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Age</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="number" required="" placeholder="18" name="age">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputBirthDay" class="col-sm-2 col-form-label">BirthDay</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" required="" name="birth_day" placeholder="01/01/2021">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputNumberPhone" class="col-sm-2 col-form-label">Number Phone</label>
                                <div class="col-sm-10">
                                    <input type="text" name="id" class="form-control" name="phone" placeholder="0123456789">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="NumberRoom" class="col-sm-2 col-form-label">Number Room</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="number_room" placeholder="101,102,...">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputKeyDevice" class="col-sm-2 col-form-label">Key Device</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" name="key_device" placeholder="keydevice01">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Thêm bệnh nhân</label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary" action method="POST" target="hidden_iframe">Thêm bệnh nhân</button>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->

                    </div>
                </div>
