        <div class="w-75 p-3">
            <form action="/add-patient" id="application-form" method="post">
                <div class="form-group mb-3">
                        <div class="col">
                            <p><strong>ID</strong>&nbsp;<span class="text-danger">*</span></p>
                            <input class="form-control" type="text" required="" name="id" placeholder="Ex. John">
                        </div>

                </div>
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col">
                            <p><strong>Name</strong>&nbsp;<span class="text-danger">*</span></p>
                            <input class="form-control" type="text" required="" name="name">
                        </div>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <p><strong>UserName&nbsp;</strong><span class="text-danger">*</span></p>
                    <input class="form-control" type="text" name="username" placeholder="user@domain.com">
                </div>
                <div class="form-group mb-3">
                    <p><strong>Password&nbsp;</strong><span class="text-danger">*</span></p>
                    <input class="form-control" type="text" name="password" placeholder="7777777777">
                </div>
                <div class="form-group mb-3">
                    <div class="row">
                        <div class="col">
                            <p>Age</p><textarea class="form-control" type="number"  required="" placeholder="Ex.  2000 - 2004   Prague Engineer College ,etc" name="age"></textarea>
                        </div>
                        <div class="col">
                            <p>BirthDay</p><input class="form-control" type="date" required="" name="birth_day" placeholder="Ex. Associate Software Engineer at Zendesk">
                        </div>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <p><strong>Number Phone&nbsp;</strong><span class="text-danger">*</span></p>
                    <input class="form-control" type="number" name="phone" placeholder="7777777777">
                </div>

                <div class="form-group mb-3">
                    <p><strong>Number Room&nbsp;</strong><span class="text-danger">*</span></p>
                    <input class="form-control" type="text" name="number_room" placeholder="7777777777">
                </div>

                <div class="form-group mb-3">
                    <p><strong>Key Device&nbsp;</strong><span class="text-danger">*</span></p>
                    <input class="form-control" type="text" name="key_device" placeholder="7777777777">
                </div>

                <div class="justify-content-center d-flex form-group mb-3">
                    <div id="submit-btn">
                        <div class="row"><button class="btn btn-primary " type="submit" style="min-width: 500px;" action method="POST" target="hidden_iframe">Thêm bệnh nhân</button></div>
                    </div>
                </div>
            </form>

